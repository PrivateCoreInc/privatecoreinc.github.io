(function($) {
    function autoMinHeight()
    {       
        var offset = 24;
        var footer = $('#footer').height();                
        var init_height = $(window).height();        
        height = init_height - offset - footer;          
        $('#auto-min-height').attr('style','min-height: ' + height + 'px;');    
        
    }

    $(document).ready(function() {
        autoMinHeight();
    });

    $(window).resize(function() {
        autoMinHeight();
    });
})(jQuery);